@model IEnumerable<DisasterAlleviationFoundationProject.Models.GoodsDonation>
@{
    ViewData["Title"] = "ViewGoods";
}

<div>

    @if (Model.Count() > 0)
    {
        <h1>Goods Donated</h1>
        <table class="table table-striped" style="width:100%;height:100px;">
            <thead>
                <tr>
                    <th>Date Goods Donated</th>
                    <th>Number of Items Donated</th>
                    <th>Category Of Goods</th>
                    <th>Goods Description</th>
                    <th>Goods Donor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var goos in Model)
                {
                    <tr>
                        <td width="20%">@goos.DateGoodsDonated</td>
                        <td width="40%">@goos.NumberOfitems</td>
                        <td width="20%">@goos.CategoryOfGoods.CategoryOfGoodName</td>
                        <td width="20%">@goos.GoodsDonatedDescription</td>
                        <td width="30%">@goos.GoodsDonor</td>
                    </tr>
                }
            </tbody>
        </table>
       <a asp-action="Index" class="btn btn-info m-2">Back</a>
        }
    else
    {
        <p> No Records.</p>
        
       <a asp-action="Index"  class="btn btn-info m-2">Back</a>
        
    }

</div>