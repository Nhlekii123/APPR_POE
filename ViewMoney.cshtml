@model IEnumerable<DisasterAlleviationFoundationProject.Models.MoneyDonation>
@{
    ViewData["Title"] = "ViewGoods";
}

<div>

    @if (Model.Count() > 0)
    {
        <h1>Money Donated</h1>
        <table class="table table-striped" style="width:100%;height:100px;">
            <thead>
                <tr>
                    <th>Date Money Donated</th>
                    <th>Amount of money</th>
                    <th>Money Donor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var money in Model)
                {
                    <tr>
                        <td width="20%">@money.DateMoneyDonated</td>
                        <td width="40%">@money.AmountOfMoney</td>
                        <td width="30%">@money.MonerDonor</td>
                    </tr>
                }
            </tbody>
        </table>
       <a asp-action="Index" class="btn btn-info m-2">Back</a>
        }
    else
    {
        <p> No Records.</p>
        
       <a asp-action="Index"  class="btn btn-info m-2">Back</a>
        
    }

</div>